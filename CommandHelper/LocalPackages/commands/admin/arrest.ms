register_command('arrest', 

    array(
        'description': 'Arrests a player and Jails them',
        'usage': '',
        'permission': 'ch.alias.timeout',
        'noPermMsg': 'Sorry you don\'t have permission to use this command.',
    
        'executor': closure(@alias, @sender, @args) {
        
            
            @cop = @sender
            @vic = @args[0]
            @vic = player(@vic)
            
            @duration = @args[1]
            if(!is_numeric(@duration)){
                msg(color('AQUA').'--------------------')
                msg(color('RED').'Usage: ')
                msg(color('RED').'/arrest '.color('GREEN').'<player> '.color('YELLOW').'<durationInSeconds> '.color('GOLD').'<reason('.color('WHITE').'at least 10 words'.color('GOLD').')>')
                msg(color('AQUA').'--------------------')
                msg(color('RED').'Example: ')
                msg(color('RED').'/arrest '.color('GREEN').'xNotch '.color('YELLOW').'60 '.color('GOLD').'spamming chat repeatedly with "im the best" and not listening to police warnings')
                msg(color('AQUA').'--------------------')
                msg(color('RED').'That would jail notch for 60 seconds.')
                return(false)
            }

            if(@duration > 86400 || @duration < 30){
                msg(color('RED').'Only values between 30 and 86400 allowed.')
                return(false)
            }

            if(array_size(@args) < 12){
                msg(color('RED').'Please write a more detailed report.')
                return(false)
            }

            @argsLength = array_size(@args)
            @reason = ''
            for (@i = 2, @i < @argsLength, @i++){
                @reason = @reason.@args[@i].' '
            }
                
            @reason = trim(@reason)
            @profile = array('type': 'sqlite', 'file': '/home/minecraft/server/plugins/CommandHelper/policedatabase.sqlite')

            @time = time()

            @vicUUID = puuid(@vic,true)
            @copUUID = puuid(@cop,true)

            store_value('arresttimes.'.@vicUUID.'.time',@time)
            store_value('arresttimes.'.@vicUUID.'.duration',@duration)

            @date = simple_date('yyyy-MM-dd HH:mm:ss', @time)
            @ip = pinfo(@vic)[3]
            @result = query(@profile,'INSERT INTO `criminals` '.
                'VALUES(?,?,?,?,?,?,?,?)',
                @vic,@vicUUID,@reason.' | '.@duration.' seconds','ARREST',@ip,@cop,@copUUID,simple_date('yyyy-MM-dd HH:mm:ss', @time)
            )
            

            runas('~console', '/sudo '.@vic.' c:/ch leave local')
            runas('~console', '/sudo '.@vic.' c:/ch join global')
            include('/home/minecraft/server/plugins/CommandHelper/includes/mortal.ms')
            _mortal(@vic)
            
            set_timeout(1000,closure(
                @jailNum = rand(1,3)
                queue_push(closure(runas("~console", "/pex user ".@vic." group set criminal")))
                queue_push(closure(runas("~console", "/tptoggle ".@vic." off")))
                queue_push(closure(runas("~console", "/cmi warp jail".@jailNum." ".@vic)						))
            ))
            set_timeout(1500,closure(
                queue_push(closure(set_pmode(@vic,'ADVENTURE')))

                broadcast(@vic.color('RED').' HAS BEEN SENT TO JAIL BY '.color('WHITE').@cop.color('RED').' FOR '.color('YELLOW').@reason)					
                
                tmsg(@vic,color('RED').'You have been jailed for '.@duration.'seconds!')
                tmsg(@vic,color('RED').'Please take this time to read the /rules')
            ))

            @criminalTimer = set_timeout((@duration * 1000),closure(
                _mortal(@vic)
                queue_push(closure(runas('~console','/sudo '.@vic.' c:/mainmenu')))
                tmsg(@vic,color('RED').'You are now released from jail. Please behave yourself.')
            ))
            export(@vic.'criminalTimer',@criminalTimer)
        }
    )
)

register_command('cleardatabase', 
    array(
        'description': 'Release a player from Jail',
        'usage': '/cleardatabse',
        'permission': 'ch.alias.cleardatabase',
        'noPermMsg': 'Sorry you don\'t have permission to use this command.',
    
        'executor': closure(@alias, @sender, @args) {
            
            @profile = array('type': 'sqlite', 'file': '/home/minecraft/server/plugins/CommandHelper/policedatabase.sqlite')
            try{
                query(@profile,'DROP TABLE criminals;')
            }catch(Exception @e){}
            query(@profile,'CREATE TABLE criminals(
    PERPNAME       TEXT    NOT NULL,
    PERPUUID       TEXT    NOT NULL,
    REASON         TEXT    NOT NULL,
    TYPE           TEXT    NOT NULL,
    IP             TEXT    NOT NULL,
    AO             TEXT    NOT NULL,
    OFFUUID        TEXT    NOT NULL,
    DATE           TEXT    NOT NULL
)')

        }
    )
)

register_command('release', 
    array(
        'description': 'Release a player from Jail',
        'usage': '/release <player>',
        'permission': 'ch.alias.release',
        'noPermMsg': 'Sorry you don\'t have permission to use this command.',
    
        'executor': closure(@alias, @sender, @args) {
        
            @vic = @args[0]
            @vic = player(@vic)
            @vicUUID = puuid(@vic,true)

            @arrestTime = get_value('arresttimes.'.@vicUUID.'.time')
            @arrestDuration = get_value('arresttimes.'.@vicUUID.'.duration')
            @currentTime = time()
            @timeLeft = integer(((@arrestTime + (@arrestDuration * 1000)) - @currentTime) / 1000)
            @criminalTimer = import(@vic.'criminalTimer')

            clear_task(@criminalTimer)
            include('/home/minecraft/server/plugins/CommandHelper/includes/mortal.ms')
            _mortal(@vic)
            queue_push(closure(runas('~console','/sudo '.@vic.' c:/mainmenu')))
            tmsg(@vic,color('RED').'You are now released from jail. Please behave yourself.')

        }
    )
)


register_command('timeleft', 
    array(
        'description': 'Release a player from Jail',
        'usage': '/timeleft',
        'permission': 'command.timeleft',
        'noPermMsg': 'Sorry you don\'t have permission to use this command.',
    
        'executor': closure(@alias, @sender, @args) {

            @numArgs = array_size(@args)
            if(@numArgs > 1){
                tmsg(@sender,color('RED').'Usage: /timeleft or /timeleft <player>')
                return()
            }
        
            if(@numArgs == 1){
                @vic = player(@args[0])
                @vicUUID = puuid(@vic,true)
                @arrestTime = get_value('arresttimes.'.@vicUUID.'.time')
                if(@arrestTime == null){
                    tmsg(@sender,color('RED').'It looks like they haven\'t been arrested before.')
                    return()
                }
                @arrestDuration = get_value('arresttimes.'.@vicUUID.'.duration')
                @currentTime = time()
                @timeLeft = integer(((@arrestTime + (@arrestDuration * 1000)) - @currentTime) / 1000)
                tmsg(@sender,color('RED').'They still have '.@timeLeft.' seconds left to serve.')
            }else{
                @vicUUID = puuid(@sender,true)
                @arrestTime = get_value('arresttimes.'.@vicUUID.'.time')
                if(@arrestTime == null){
                    tmsg(@sender,color('RED').'It looks like they haven\'t been arrested before.')
                    return()
                }
                @arrestDuration = get_value('arresttimes.'.@vicUUID.'.duration')
                @currentTime = time()
                @timeLeft = integer(((@arrestTime + (@arrestDuration * 1000)) - @currentTime) / 1000)

                tmsg(@sender,color('RED').'You still have '.@timeLeft.' seconds left to serve.')
            }
            
        }
    )
)
